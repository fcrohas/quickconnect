<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:id="@+id/LinearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
        <ImageView android:src="@drawable/icon" android:id="@+id/appIcon" android:layout_width="50dp" android:layout_height="50dp"></ImageView>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="match_parent" android:orientation="vertical" android:layout_weight="0.90" android:layout_width="match_parent">
            <TextView android:text="TextView" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/appName" android:layout_width="match_parent"></TextView>
            <TextView android:text="TextView" android:id="@+id/appInfo" android:layout_height="wrap_content" android:layout_width="match_parent"></TextView>
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
